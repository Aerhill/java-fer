    }

    private static void performOperation(int firstOperand, int secondOperand,
	    char operator, ObjectStack stack) {
	switch (operator) {
	case '%':
	    stack.push(secondOperand % firstOperand);
	    break;
	case '/':
	    stack.push(secondOperand / firstOperand);
	    break;
	case '*':
	    stack.push(firstOperand * secondOperand);
	    break;
	case '+':
	    stack.push(firstOperand + secondOperand);
	    break;
	case '-':
	    stack.push(firstOperand - secondOperand);
	    break;
	}

    }
}

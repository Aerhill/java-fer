package hr.fer.zemris.java.custom.scripting.elems;

/**
 * Razred <code>ElementString</code> izveden je iz razreda <code>Element</code>
 * i predstavlja objekt koji enkapsulira rijec u obliku objekta tipa
 * <code>String</code>, a koja je nastala leksickom analizom teksta.
 * 
 * @author Hrvoje Bušić
 *
 */
public class ElementString extends Element {

	/**
	 * Vrijednost u obliku objekta tipa <code>String</code>.
	 */
	private String value;

	/**
	 * Javni konstruktor razreda preko argumenta prima vrijednost koja
	 * predstavlja rijec koja se enkapsulira.
	 * 
	 * @param value
	 *            rijec koja se pohranjuje
	 * @throws IllegalArgumentException
	 *             ako je vrijednost predana kao argument <code>null</code>
	 *             vrijednost
	 */
	public ElementString(String value) {
		if (value == null) {
			throw new IllegalArgumentException("Value given can not be null.");
		}
		this.value = value;
	}

	@Override
	public String asText() {
		System.out.println("PRINT");
		return value;
	}
}

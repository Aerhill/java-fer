		    int first = (int) stack.pop();
		    int second = (int) stack.pop();
		    performOperation(first, second, argumenti[i].charAt(0),
			    stack);
		} else {
		    System.err
			    .println("Your expression is not valid, there must be at least 2 numbers before an operator");
		    return;

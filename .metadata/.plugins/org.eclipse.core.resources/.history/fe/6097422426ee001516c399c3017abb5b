package hr.fer.zemris.java.custom.collections;

import java.util.EmptyStackException;

public class ObjectStack {

    ArrayIndexedCollection adaptee;

    public ObjectStack() {
	adaptee = new ArrayIndexedCollection();
    }

    public ObjectStack(int capacity) {
	adaptee = new ArrayIndexedCollection(capacity);
    }

    public boolean isEmpty() {
	return adaptee.isEmpty();
    }

    public int size() {
	return adaptee.size();
    }

    public void push(Object value) {
	if (value == null)
	    throw new IllegalArgumentException();
	adaptee.add(value);
    }

    public Object pop() {
	if (adaptee.size() == 0)
	    throw new EmptyStackException();
	Object result = adaptee.get(adaptee.size() - 1);
	adaptee.remove(result);
	return result;
    }

    public Object peek() {
	return adaptee.get(adaptee.size() - 1);
    }

    public void clear() {
	adaptee.clear();
    }

}

package hr.fer.zemris.java.tecaj.hw1;

import java.text.DecimalFormat;

public class Roots {

	public static void main(String[] args) {
		if (args.length != 3) {
			System.out.println("Invalid number of arguments");
		} else if (Integer.parseInt(args[2]) < 2) {
			System.out.println("Root must be positive number > 1");
		} else {
			int a = Integer.parseInt(args[0]);
			int b = Integer.parseInt(args[1]);
			int n = Integer.parseInt(args[2]);

			double theta = Math.atan2(b, a);
			double mod = Math.sqrt(a * a + b * b);

			double root = Math.pow(mod, 1.0 / n);

			for (int i = 0; i <= (n - 1); i++) {
				double realni = root * Math.cos((theta + i * 2 * Math.PI) / n);
				double imaginarni = root
						* Math.sin((theta + i * 2 * Math.PI) / n);
				System.out.println((i + 1) + ")");
				DecimalFormat df = new DecimalFormat("##");
				if (realni > (double) 0) {
					System.out.print(" + ");
				} else {
					System.out.print(" - ");
				}
				System.out.print(df.format(Math.abs(imaginarni)));

				if (imaginarni > (double) 0) {
					System.out.print(" + ");
				} else {
					System.out.print(" - ");
				}
				System.out.println(df.format(Math.abs(imaginarni)) + "i");
			}
		}
	}
}

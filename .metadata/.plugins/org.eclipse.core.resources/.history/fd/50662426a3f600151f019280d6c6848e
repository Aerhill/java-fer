package hr.fer.zemris.java.custom.scripting.elems;

/**
 * Razred <code>ElementConstantDouble</code> izveden je iz razreda
 * <code>Element</code> i predstavlja objekt koji enkapsulira broj u dvostrukoj
 * preciznosti, a koji je nastao leksickom analizom teksta.
 * 
 * @author Hrvoje Bušić
 *
 */
public class ElementConstantDouble extends Element {

	/**
	 * Vrijednost u obliku realnog broja dvostruke preciznosti.
	 */
	private double value;

	/**
	 * Javni konstruktor razreda preko argumenta prima vrijednost koja
	 * predstavlja realan broj koji se enkapsulira.
	 * 
	 * @param value
	 *            broj za pohranu
	 */
	public ElementConstantDouble(double value) {
		this.value = value;
	}

	@Override
	public String asText() {
		return String.valueOf(value + "double");
	}
}
